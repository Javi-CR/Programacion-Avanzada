@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section MainContent {

    <div class="container">
        
        <h2 class="text-center my-5">Your Favorite Recipes</h2>
        <p class="text-center">Here is where your saved favorite recipes will appear.</p>

        <!-- Botón Crear Receta -->
        <div class="text-center mb-5">
            <a href="#" class="btn btn-primary">Crear Receta</a>
        </div>

        <!-- Cards de recetas alineados horizontalmente -->
        <div class="row justify-content-center">
            <!-- Card 1 -->
            <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
                <div class="recipe-card bg-white border rounded shadow">
                    <!-- Imagen de la receta -->
                    <img src="img/gallery/recipe1.jpg" class="img-fluid rounded-top" alt="Recipe 1">
                    <!-- Contenido de la receta -->
                    <div class="p-3">
                        <h5 class="fw-bold">Spaghetti Carbonara</h5>
                        <p class="text-muted mb-1">Categoría: Italian</p>
                        <p class="mb-1"><strong>Pasos:</strong></p>
                        <ul class="mb-1">
                            <li>Hervir los espaguetis.</li>
                            <li>Preparar la salsa carbonara.</li>
                            <li>Mezclar y servir.</li>
                        </ul>
                        <p class="mb-0"><strong>Ingredientes:</strong></p>
                        <ul>
                            <li>Espaguetis (200g)</li>
                            <li>Huevos (2)</li>
                            <li>Queso parmesano (50g)</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Card 2 -->
            <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
                <div class="recipe-card bg-white border rounded shadow">
                    <!-- Imagen de la receta -->
                    <img src="img/gallery/recipe2.jpg" class="img-fluid rounded-top" alt="Recipe 2">
                    <!-- Contenido de la receta -->
                    <div class="p-3">
                        <h5 class="fw-bold">Pancakes Clásicos</h5>
                        <p class="text-muted mb-1">Categoría: Brunch Favorites</p>
                        <p class="mb-1"><strong>Pasos:</strong></p>
                        <ul class="mb-1">
                            <li>Mezclar la harina y los huevos.</li>
                            <li>Cocinar en una sartén caliente.</li>
                            <li>Servir con miel o fruta.</li>
                        </ul>
                        <p class="mb-0"><strong>Ingredientes:</strong></p>
                        <ul>
                            <li>Harina (2 tazas)</li>
                            <li>Huevos (2)</li>
                            <li>Leche (1 taza)</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Card 3 -->
            <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
                <div class="recipe-card bg-white border rounded shadow">
                    <!-- Imagen de la receta -->
                    <img src="img/gallery/recipe3.jpg" class="img-fluid rounded-top" alt="Recipe 3">
                    <!-- Contenido de la receta -->
                    <div class="p-3">
                        <h5 class="fw-bold">Tacos al Pastor</h5>
                        <p class="text-muted mb-1">Categoría: Mexican</p>
                        <p class="mb-1"><strong>Pasos:</strong></p>
                        <ul class="mb-1">
                            <li>Marinar la carne de cerdo.</li>
                            <li>Cocinar en una parrilla.</li>
                            <li>Servir con tortillas y piña.</li>
                        </ul>
                        <p class="mb-0"><strong>Ingredientes:</strong></p>
                        <ul>
                            <li>Cerdo (500g)</li>
                            <li>Tortillas (6)</li>
                            <li>Piña en trozos (1/2 taza)</li>
                        </ul>
                    </div>
                </div>
            </div>


    </div>




}