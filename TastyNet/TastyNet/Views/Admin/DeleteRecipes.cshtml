@model IEnumerable<TastyNet.Models.RecipesALL>
@{
    Layout = "~/Views/Shared/_LayoutDash.cshtml";
}


<h2>Eliminar Recetas</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-danger">
        <strong>@ViewBag.Message</strong>
    </div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Categoría</th>
            <th>Imagen</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var recipe in Model)
        {
            <tr>
                <td>@recipe.Id</td>
                <td>@recipe.Name</td>
                <td>@recipe.CategoryName</td>
                <td>
                    <img src="@recipe.Image" alt="@recipe.Name" style="width: 100px; height: auto;" />
                </td>
                <td>
                    <form asp-action="DeleteRecipes" method="post">
                        <input type="hidden" name="recipeId" value="@recipe.Id" />
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Edit Section -->
<section class="contact section">

    <div class="heading">
        <div class="container">
            <div class="row d-flex justify-content-center text-center">
                <div class="col-lg-8">


                    <h1>Delete Recipe by ID</h1>


                </div>
            </div>
        </div>
    </div>

    <!-- Form -->
    <form method="post" asp-action="DeleteRecipe" asp-controller="Admin" class="php-email-form" data-aos-delay="300">

        <div class="row gy-4 d-flex justify-content-center">

            <div class="col-md-8">
                <input type="number" name="id" class="form-control" placeholder="Recipe Id" required>
            </div>

            <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-primary">Delete</button>
            </div>

        </div>
    </form>
</section>
