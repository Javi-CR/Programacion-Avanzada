@{
    Layout = "~/Views/Shared/_LayoutDash.cshtml";
}

<section class="vh-100 d-flex align-items-center justify-content-center">
    <div class="container text-center">
        <div class="row">
            <div class="col-md-12">
                <div class="card shadow-lg border-0">
                    <div class="card-body">
                        <i class="fa fa-user-shield text-primary" style="font-size: 4em;"></i>
                        <h1 class="mt-3">Welcome, Administrator</h1>
                        <p class="text-muted">Manage platform content easily and efficiently.</p>

                        <div class="mt-4">
                            <button class="btn btn-primary btn-lg mx-2"
                                    onclick="window.location.href='@Url.Action("AllRecipes", "Admin")'">
                                <i class="fa fa-book"></i> Delete Recipes
                            </button>
                            <button class="btn btn-secondary btn-lg mx-2"
                                    onclick="window.location.href='@Url.Action("DeleteUsers", "Admin")'">
                                <i class="fa fa-users"></i> Delete Users
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CSS adicional -->
<style>
    section {
        background-color: #f8f9fa;
    }

    .card {
        padding: 30px;
        max-width: 600px;
        margin: auto;
    }

    .btn i {
        margin-right: 5px;
    }
</style>
