@{
    ViewData["Title"] = "Family Favorites";
}
@section MainContent {
    <section class="recipe-category">
        <div class="container">
            <h2 class="text-center">Family Favorites</h2>
            <p class="text-center">Delicious and comforting meals that bring the whole family together.</p>
            <div class="row justify-content-center">
                <!-- Tarjeta 1 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/family1.jpg" alt="Macaroni and Cheese" class="card-img-top">
                        <!-- Botón de favorito -->
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Macaroni and Cheese</h5>
                            <p class="card-text">A classic dish with creamy cheese sauce that everyone loves.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 2 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/family2.jpg" alt="Spaghetti Bolognese" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Spaghetti Bolognese</h5>
                            <p class="card-text">A hearty pasta dish with rich meat sauce for the perfect family dinner.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 3 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/family3.jpg" alt="Roasted Chicken" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Roasted Chicken</h5>
                            <p class="card-text">Juicy and tender roasted chicken, perfect for a Sunday meal.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}