@{
    ViewData["Title"] = "Roasts & Grills";
}
@section MainContent {
    <section class="recipe-category">
        <div class="container">
            <h2 class="text-center">Roasts & Grills</h2>
            <p class="text-center">Perfect meals to share with family and friends, featuring juicy roasts and smoky grills.</p>
            <div class="row justify-content-center">
                <!-- Tarjeta 1 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/roast1.jpg" alt="Roast Chicken" class="card-img-top">
                        <!-- Botón de favorito -->
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Roast Chicken</h5>
                            <p class="card-text">Golden and crispy on the outside, tender on the inside.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 2 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/roast2.jpg" alt="Grilled Steak" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Grilled Steak</h5>
                            <p class="card-text">Juicy, tender, and grilled to perfection.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 3 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/roast3.jpg" alt="BBQ Ribs" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">BBQ Ribs</h5>
                            <p class="card-text">Sticky, sweet, and smoky – a true weekend treat.</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Segunda fila de 3 tarjetas -->
            <div class="row justify-content-center mt-4">
                <!-- Tarjeta 4 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/roast4.jpg" alt="Grilled Salmon" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Grilled Salmon</h5>
                            <p class="card-text">Perfectly seasoned and grilled with a zesty glaze.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 5 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/roast5.jpg" alt="Herb-Crusted Lamb" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Herb-Crusted Lamb</h5>
                            <p class="card-text">Juicy lamb roast with a flavorful herb crust.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 6 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/roast6.jpg" alt="Grilled Veggie Skewers" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Grilled Veggie Skewers</h5>
                            <p class="card-text">A colorful mix of perfectly grilled vegetables.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}