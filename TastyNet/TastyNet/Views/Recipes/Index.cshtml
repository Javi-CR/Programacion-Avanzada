@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

@model IEnumerable<TastyNestFrontend.Models.RecipeViewModel>

<h1>Recipes</h1>
<form method="get" class="mb-4">
    <input type="text" name="search" placeholder="Search recipes" class="form-control mb-2" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>
<div class="row">
    @foreach (var recipe in Model)
    {
        <div class="col-md-4">
            <div class="card">
                <img src="@recipe.Image" class="card-img-top" alt="@recipe.Name" />
                <div class="card-body">
                    <h5 class="card-title">@recipe.Name</h5>
                    <p class="card-text">@recipe.Description</p>
                    <a href="@Url.Action("Details", "Recipes", new { id = recipe.Id })" class="btn btn-primary">Details</a>
                </div>
            </div>
        </div>
    }
</div>
