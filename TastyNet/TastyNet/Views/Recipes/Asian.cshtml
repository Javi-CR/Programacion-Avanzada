@{
    ViewData["Title"] = "Asian Recipes";
}

<section class="recipe-category">
    <div class="container">
        <h2 class="text-center">Asian Recipes</h2>
        <p class="text-center">Discover the rich and diverse flavors of Asia with these delicious recipes.</p>
        <div class="row justify-content-center">
            <!-- Tarjeta 1 -->
            <div class="col-md-4">
                <div class="card position-relative">
                    <img src="~/img/recipes/asian1.jpg" alt="Teriyaki Chicken" class="card-img-top">
                    <!-- Botón de favorito -->
                    <button class="favorite-btn">
                        <i class="bi bi-heart"></i>
                    </button>
                    <div class="card-body">
                        <h5 class="card-title">Teriyaki Chicken</h5>
                        <p class="card-text">Sweet and savory chicken glazed with teriyaki sauce.</p>
                    </div>
                </div>
            </div>

            <!-- Tarjeta 2 -->
            <div class="col-md-4">
                <div class="card position-relative">
                    <img src="~/img/recipes/asian2.jpg" alt="Pad Thai" class="card-img-top">
                    <button class="favorite-btn">
                        <i class="bi bi-heart"></i>
                    </button>
                    <div class="card-body">
                        <h5 class="card-title">Pad Thai</h5>
                        <p class="card-text">Classic Thai stir-fried noodles with shrimp and peanuts.</p>
                    </div>
                </div>
            </div>

            <!-- Tarjeta 3 -->
            <div class="col-md-4">
                <div class="card position-relative">
                    <img src="~/img/recipes/asian3.jpg" alt="Sushi Rolls" class="card-img-top">
                    <button class="favorite-btn">
                        <i class="bi bi-heart"></i>
                    </button>
                    <div class="card-body">
                        <h5 class="card-title">Sushi Rolls</h5>
                        <p class="card-text">Fresh and delicious sushi rolls made with your favorite fillings.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
