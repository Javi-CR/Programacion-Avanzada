@{
    ViewData["Title"] = "Asian Recipes";
}
@section MainContent {

    <section class="recipe-category">
        <div class="container">
            <h2 class="text-center">Asian Recipes</h2>
            <p class="text-center">Discover the rich and diverse flavors of Asia with these delicious recipes.</p>
            <div class="row justify-content-center">
                <!-- Tarjeta 1 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/asian1.jpg" alt="Teriyaki Chicken" class="card-img-top">
                        <!-- Botón de favorito -->
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Teriyaki Chicken</h5>
                            <p class="card-text">Sweet and savory chicken glazed with teriyaki sauce.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 2 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/asian2.jpg" alt="Pad Thai" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Pad Thai</h5>
                            <p class="card-text">Classic Thai stir-fried noodles with shrimp and peanuts.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 3 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/asian3.jpg" alt="Sushi Rolls" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Sushi Rolls</h5>
                            <p class="card-text">Fresh and delicious sushi rolls made with your favorite fillings.</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Segunda fila de 3 tarjetas -->
            <div class="row justify-content-center mt-4">
                <!-- Tarjeta 4 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/asian4.jpg" alt="Spring Rolls" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Spring Rolls</h5>
                            <p class="card-text">Crispy and light spring rolls with a savory filling.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 5 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/asian5.jpg" alt="Ramen Bowl" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Ramen Bowl</h5>
                            <p class="card-text">Comforting ramen noodles in a flavorful broth.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 6 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/asian6.jpg" alt="Beef Stir-Fry" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Beef Stir-Fry</h5>
                            <p class="card-text">Tender beef and vegetables stir-fried with soy sauce.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}