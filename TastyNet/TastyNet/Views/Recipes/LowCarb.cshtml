@{
    ViewData["Title"] = "Low-Carb Recipes";
}
@section MainContent {
    <section class="recipe-category">
        <div class="container">
            <h2 class="text-center">Low-Carb Recipes</h2>
            <p class="text-center">Delicious low-carb recipes to enjoy without guilt!</p>
            <div class="row justify-content-center">
                <!-- Tarjeta 1 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/lowcarb1.jpg" alt="Zucchini Noodles" class="card-img-top">
                        <!-- Botón de favorito -->
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Zucchini Noodles</h5>
                            <p class="card-text">A healthy alternative to pasta, perfect with your favorite sauce.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 2 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/lowcarb2.jpg" alt="Cauliflower Rice" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Cauliflower Rice</h5>
                            <p class="card-text">Light, fluffy, and full of flavor – the perfect low-carb side dish.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 3 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/lowcarb3.jpg" alt="Grilled Chicken Salad" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Grilled Chicken Salad</h5>
                            <p class="card-text">A fresh and hearty salad packed with protein and low on carbs.</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Segunda fila de 3 tarjetas -->
            <div class="row justify-content-center mt-4">
                <!-- Tarjeta 4 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/lowcarb4.jpg" alt="Stuffed Bell Peppers" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Stuffed Bell Peppers</h5>
                            <p class="card-text">Bell peppers filled with a delicious mix of meat and vegetables.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 5 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/lowcarb5.jpg" alt="Egg Muffins" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Egg Muffins</h5>
                            <p class="card-text">Protein-packed muffins with spinach, cheese, and eggs.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 6 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/lowcarb6.jpg" alt="Baked Salmon" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Baked Salmon</h5>
                            <p class="card-text">A perfectly seasoned salmon fillet baked to tender perfection.</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Tercera fila de 3 tarjetas -->
            <div class="row justify-content-center mt-4">
                <!-- Tarjeta 7 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/lowcarb7.jpg" alt="Avocado Egg Boats" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Avocado Egg Boats</h5>
                            <p class="card-text">Baked avocados filled with eggs and topped with fresh herbs.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 8 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/lowcarb8.jpg" alt="Zucchini Pizza Bites" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Zucchini Pizza Bites</h5>
                            <p class="card-text">Mini pizzas made with zucchini slices as the base.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 9 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/lowcarb9.jpg" alt="Cauliflower Mac & Cheese" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Cauliflower Mac & Cheese</h5>
                            <p class="card-text">A creamy and cheesy low-carb alternative to traditional mac & cheese.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}