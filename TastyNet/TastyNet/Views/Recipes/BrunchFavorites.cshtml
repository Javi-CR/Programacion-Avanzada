@{
    ViewData["Title"] = "Brunch Favorites";
}
@section MainContent {

    <section class="recipe-category">
        <div class="container">
            <h2 class="text-center">Brunch Favorites</h2>
            <p class="text-center">Start your day with these delicious and hearty brunch recipes!</p>
            <div class="row justify-content-center">
                <!-- Tarjeta 1 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/brunch1.jpg" alt="Eggs Benedict" class="card-img-top">
                        <!-- Botón de favorito -->
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Eggs Benedict</h5>
                            <p class="card-text">Classic poached eggs with hollandaise sauce on an English muffin.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 2 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/brunch2.jpg" alt="Avocado Toast" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Avocado Toast</h5>
                            <p class="card-text">Fresh avocado slices on crispy bread, topped with a sprinkle of chili flakes.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 3 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/brunch3.jpg" alt="Pancakes" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Fluffy Pancakes</h5>
                            <p class="card-text">Golden fluffy pancakes served with maple syrup and fresh berries.</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Segunda fila de 3 tarjetas -->
            <div class="row justify-content-center mt-4">
                <!-- Tarjeta 4 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/brunch4.jpg" alt="French Toast" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">French Toast</h5>
                            <p class="card-text">Golden French toast topped with powdered sugar and syrup.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 5 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/brunch5.jpg" alt="Omelette" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Vegetable Omelette</h5>
                            <p class="card-text">Fluffy omelette filled with fresh vegetables and cheese.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 6 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/brunch6.jpg" alt="Bagel & Cream Cheese" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Bagel & Cream Cheese</h5>
                            <p class="card-text">Toasted bagel with cream cheese, smoked salmon, and capers.</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Tercera fila de 3 tarjetas -->
            <div class="row justify-content-center mt-4">
                <!-- Tarjeta 7 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/brunch7.jpg" alt="Breakfast Burrito" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Breakfast Burrito</h5>
                            <p class="card-text">A hearty burrito filled with eggs, cheese, and sausage.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 8 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/brunch8.jpg" alt="Waffles" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Crispy Waffles</h5>
                            <p class="card-text">Light and crispy waffles served with whipped cream and fruit.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 9 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/brunch9.jpg" alt="Quiche Lorraine" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Quiche Lorraine</h5>
                            <p class="card-text">Savory pie with bacon, cheese, and custard filling.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}