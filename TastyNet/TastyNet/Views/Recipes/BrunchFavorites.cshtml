@{
    ViewData["Title"] = "Brunch Favorites";
}

<section class="recipe-category">
    <div class="container">
        <h2 class="text-center">Brunch Favorites</h2>
        <p class="text-center">Start your day with these delicious and hearty brunch recipes!</p>
        <div class="row justify-content-center">
            <!-- Tarjeta 1 -->
            <div class="col-md-4">
                <div class="card position-relative">
                    <img src="~/img/recipes/brunch1.jpg" alt="Eggs Benedict" class="card-img-top">
                    <!-- Botón de favorito -->
                    <button class="favorite-btn">
                        <i class="bi bi-heart"></i>
                    </button>
                    <div class="card-body">
                        <h5 class="card-title">Eggs Benedict</h5>
                        <p class="card-text">Classic poached eggs with hollandaise sauce on an English muffin.</p>
                    </div>
                </div>
            </div>

            <!-- Tarjeta 2 -->
            <div class="col-md-4">
                <div class="card position-relative">
                    <img src="~/img/recipes/brunch2.jpg" alt="Avocado Toast" class="card-img-top">
                    <button class="favorite-btn">
                        <i class="bi bi-heart"></i>
                    </button>
                    <div class="card-body">
                        <h5 class="card-title">Avocado Toast</h5>
                        <p class="card-text">Fresh avocado slices on crispy bread, topped with a sprinkle of chili flakes.</p>
                    </div>
                </div>
            </div>

            <!-- Tarjeta 3 -->
            <div class="col-md-4">
                <div class="card position-relative">
                    <img src="~/img/recipes/brunch3.jpg" alt="Pancakes" class="card-img-top">
                    <button class="favorite-btn">
                        <i class="bi bi-heart"></i>
                    </button>
                    <div class="card-body">
                        <h5 class="card-title">Fluffy Pancakes</h5>
                        <p class="card-text">Golden fluffy pancakes served with maple syrup and fresh berries.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
