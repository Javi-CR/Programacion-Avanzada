@{
    ViewData["Title"] = "Mexican Recipes";
}

<section class="recipe-category">
    <div class="container">
        <h2 class="text-center">Mexican Recipes</h2>
        <p class="text-center">Experience the bold and vibrant flavors of Mexico.</p>
        <div class="row justify-content-center">
            <!-- Tarjeta 1 -->
            <div class="col-md-4">
                <div class="card position-relative">
                    <img src="~/img/recipes/mexican1.jpg" alt="Tacos al Pastor" class="card-img-top">
                    <!-- Botón de favorito -->
                    <button class="favorite-btn">
                        <i class="bi bi-heart"></i>
                    </button>
                    <div class="card-body">
                        <h5 class="card-title">Tacos al Pastor</h5>
                        <p class="card-text">Juicy pork tacos with pineapple, perfect for any occasion.</p>
                    </div>
                </div>
            </div>

            <!-- Tarjeta 2 -->
            <div class="col-md-4">
                <div class="card position-relative">
                    <img src="~/img/recipes/mexican2.jpg" alt="Chicken Enchiladas" class="card-img-top">
                    <button class="favorite-btn">
                        <i class="bi bi-heart"></i>
                    </button>
                    <div class="card-body">
                        <h5 class="card-title">Chicken Enchiladas</h5>
                        <p class="card-text">Soft tortillas filled with chicken and topped with red sauce.</p>
                    </div>
                </div>
            </div>

            <!-- Tarjeta 3 -->
            <div class="col-md-4">
                <div class="card position-relative">
                    <img src="~/img/recipes/mexican3.jpg" alt="Fresh Guacamole" class="card-img-top">
                    <button class="favorite-btn">
                        <i class="bi bi-heart"></i>
                    </button>
                    <div class="card-body">
                        <h5 class="card-title">Fresh Guacamole</h5>
                        <p class="card-text">Creamy and delicious, perfect as a dip or topping.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
