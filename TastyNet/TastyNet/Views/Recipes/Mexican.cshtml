@{
    ViewData["Title"] = "Mexican Recipes";
}
@section MainContent {
    <section class="recipe-category">
        <div class="container">
            <h2 class="text-center">Mexican Recipes</h2>
            <p class="text-center">Experience the bold and vibrant flavors of Mexico.</p>
            <div class="row justify-content-center">
                <!-- Tarjeta 1 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/mexican1.jpg" alt="Tacos al Pastor" class="card-img-top">
                        <!-- Botón de favorito -->
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Tacos al Pastor</h5>
                            <p class="card-text">Juicy pork tacos with pineapple, perfect for any occasion.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 2 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/mexican2.jpg" alt="Chicken Enchiladas" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Chicken Enchiladas</h5>
                            <p class="card-text">Soft tortillas filled with chicken and topped with red sauce.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 3 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/mexican3.jpg" alt="Fresh Guacamole" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Fresh Guacamole</h5>
                            <p class="card-text">Creamy and delicious, perfect as a dip or topping.</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Segunda fila de 3 tarjetas -->
            <div class="row justify-content-center mt-4">
                <!-- Tarjeta 4 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/mexican4.jpg" alt="Chiles Rellenos" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Chiles Rellenos</h5>
                            <p class="card-text">Poblano peppers stuffed with cheese and fried in a light batter.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 5 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/mexican5.jpg" alt="Beef Tamales" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Beef Tamales</h5>
                            <p class="card-text">Traditional tamales filled with seasoned beef and wrapped in corn husks.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 6 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/mexican6.jpg" alt="Elote (Mexican Street Corn)" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Elote (Street Corn)</h5>
                            <p class="card-text">Grilled corn coated with mayonnaise, cheese, and chili powder.</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Tercera fila de 3 tarjetas -->
            <div class="row justify-content-center mt-4">
                <!-- Tarjeta 7 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/mexican7.jpg" alt="Pozole" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Pozole</h5>
                            <p class="card-text">Traditional Mexican soup made with hominy, pork, and garnished with fresh toppings.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 8 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/mexican8.jpg" alt="Carne Asada Tacos" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Carne Asada Tacos</h5>
                            <p class="card-text">Grilled beef tacos served with onions, cilantro, and lime.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 9 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/mexican9.jpg" alt="Tres Leches Cake" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Tres Leches Cake</h5>
                            <p class="card-text">Moist sponge cake soaked in three types of milk and topped with whipped cream.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}