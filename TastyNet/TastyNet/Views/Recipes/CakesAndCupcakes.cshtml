@{
    ViewData["Title"] = "Cakes & Cupcakes";
}
@section MainContent {

    <section class="recipe-category">
        <div class="container">
            <h2 class="text-center">Cakes & Cupcakes</h2>
            <p class="text-center">Indulge in sweet and delicious cakes and cupcakes for every occasion.</p>
            <div class="row justify-content-center">
                <!-- Tarjeta 1 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/cakes1.jpg" alt="Chocolate Cake" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Chocolate Cake</h5>
                            <p class="card-text">Rich and moist chocolate cake topped with ganache.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 2 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/cupcakes1.jpg" alt="Vanilla Cupcakes" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Vanilla Cupcakes</h5>
                            <p class="card-text">Soft and fluffy cupcakes with creamy frosting.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 3 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/cakes2.jpg" alt="Red Velvet Cake" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Red Velvet Cake</h5>
                            <p class="card-text">Classic red velvet cake with cream cheese frosting.</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Segunda fila de 3 tarjetas -->
            <div class="row justify-content-center mt-4">
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/cupcakes2.jpg" alt="Strawberry Cupcakes" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Strawberry Cupcakes</h5>
                            <p class="card-text">Cupcakes infused with strawberry and topped with frosting.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/cakes3.jpg" alt="Carrot Cake" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Carrot Cake</h5>
                            <p class="card-text">Moist and spiced cake with cream cheese frosting.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/cupcakes3.jpg" alt="Lemon Cupcakes" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Lemon Cupcakes</h5>
                            <p class="card-text">Zesty lemon cupcakes with a light citrus glaze.</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Tercera fila de 3 tarjetas -->
            <div class="row justify-content-center mt-4">
                <!-- Tarjeta 7 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/cakes4.jpg" alt="Cheesecake" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Classic Cheesecake</h5>
                            <p class="card-text">Creamy cheesecake with a graham cracker crust.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 8 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/cupcakes4.jpg" alt="Chocolate Cupcakes" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Chocolate Cupcakes</h5>
                            <p class="card-text">Decadent chocolate cupcakes topped with rich frosting.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 9 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/cakes5.jpg" alt="Angel Food Cake" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Angel Food Cake</h5>
                            <p class="card-text">Light and airy cake perfect with berries and cream.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}