@{
    ViewData["Title"] = "Cakes & Cupcakes";
}

<section class="recipe-category">
    <div class="container">
        <h2 class="text-center">Cakes & Cupcakes</h2>
        <p class="text-center">Indulge in sweet and delicious cakes and cupcakes for every occasion.</p>
        <div class="row justify-content-center">
            <!-- Tarjeta 1 -->
            <div class="col-md-4">
                <div class="card position-relative">
                    <img src="~/img/recipes/cakes1.jpg" alt="Chocolate Cake" class="card-img-top">
                    <button class="favorite-btn">
                        <i class="bi bi-heart"></i>
                    </button>
                    <div class="card-body">
                        <h5 class="card-title">Chocolate Cake</h5>
                        <p class="card-text">Rich and moist chocolate cake topped with ganache.</p>
                    </div>
                </div>
            </div>

            <!-- Tarjeta 2 -->
            <div class="col-md-4">
                <div class="card position-relative">
                    <img src="~/img/recipes/cupcakes1.jpg" alt="Vanilla Cupcakes" class="card-img-top">
                    <button class="favorite-btn">
                        <i class="bi bi-heart"></i>
                    </button>
                    <div class="card-body">
                        <h5 class="card-title">Vanilla Cupcakes</h5>
                        <p class="card-text">Soft and fluffy cupcakes with creamy frosting.</p>
                    </div>
                </div>
            </div>

            <!-- Tarjeta 3 -->
            <div class="col-md-4">
                <div class="card position-relative">
                    <img src="~/img/recipes/cakes2.jpg" alt="Red Velvet Cake" class="card-img-top">
                    <button class="favorite-btn">
                        <i class="bi bi-heart"></i>
                    </button>
                    <div class="card-body">
                        <h5 class="card-title">Red Velvet Cake</h5>
                        <p class="card-text">Classic red velvet cake with cream cheese frosting.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
