@{
    ViewData["Title"] = "Vegan & Vegetarian Recipes";
}
@section MainContent {
    <section class="recipe-category">
        <div class="container">
            <h2 class="text-center">Vegan & Vegetarian Recipes</h2>
            <p class="text-center">Delicious and healthy recipes for a plant-based lifestyle.</p>
            <div class="row justify-content-center">
                <!-- Tarjeta 1 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/vegan1.jpg" alt="Vegan Buddha Bowl" class="card-img-top">
                        <!-- Botón de favorito -->
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Vegan Buddha Bowl</h5>
                            <p class="card-text">A vibrant mix of vegetables, grains, and tahini dressing.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 2 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/vegan2.jpg" alt="Vegetarian Stir-Fry" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Vegetarian Stir-Fry</h5>
                            <p class="card-text">A quick and colorful stir-fry with tofu and fresh veggies.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 3 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/vegan3.jpg" alt="Quinoa Salad" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Quinoa Salad</h5>
                            <p class="card-text">A refreshing salad with quinoa, cucumbers, and lemon dressing.</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Segunda fila de 3 tarjetas -->
            <div class="row justify-content-center mt-4">
                <!-- Tarjeta 4 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/vegan4.jpg" alt="Stuffed Bell Peppers" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Stuffed Bell Peppers</h5>
                            <p class="card-text">Bell peppers stuffed with a flavorful rice and veggie filling.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 5 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/vegan5.jpg" alt="Vegan Tacos" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Vegan Tacos</h5>
                            <p class="card-text">Crispy tacos filled with spiced lentils and fresh toppings.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 6 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/vegan6.jpg" alt="Vegetarian Curry" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Vegetarian Curry</h5>
                            <p class="card-text">A creamy curry with vegetables and aromatic spices.</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Tercera fila de 3 tarjetas -->
            <div class="row justify-content-center mt-4">
                <!-- Tarjeta 7 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/vegan7.jpg" alt="Vegan Pasta Primavera" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Vegan Pasta Primavera</h5>
                            <p class="card-text">A light and colorful pasta dish loaded with fresh vegetables.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 8 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/vegan8.jpg" alt="Falafel Wraps" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Falafel Wraps</h5>
                            <p class="card-text">Crispy falafels wrapped in pita bread with fresh veggies and tahini sauce.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 9 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/vegan9.jpg" alt="Stuffed Zucchini Boats" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Stuffed Zucchini Boats</h5>
                            <p class="card-text">Zucchini stuffed with a mix of quinoa, vegetables, and herbs.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}