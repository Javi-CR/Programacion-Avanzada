@{
    ViewData["Title"] = "Soups & Stews Recipes";
}
@section MainContent {
    <section class="recipe-category">
        <div class="container">
            <h2 class="text-center">Soups & Stews</h2>
            <p class="text-center">Warm, hearty, and perfect for any season.</p>
            <div class="row justify-content-center">
                <!-- Tarjeta 1 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/soup1.jpg" alt="Chicken Noodle Soup" class="card-img-top">
                        <!-- Botón de favorito -->
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Chicken Noodle Soup</h5>
                            <p class="card-text">A classic comfort food made with tender chicken, noodles, and vegetables.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 2 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/soup2.jpg" alt="Beef Stew" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Beef Stew</h5>
                            <p class="card-text">Rich and hearty stew with tender beef and vegetables in a savory broth.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 3 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/soup3.jpg" alt="Tomato Basil Soup" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Tomato Basil Soup</h5>
                            <p class="card-text">A creamy tomato soup enhanced with fresh basil, perfect with grilled cheese.</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Segunda fila de 3 tarjetas -->
            <div class="row justify-content-center mt-4">
                <!-- Tarjeta 4 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/soup4.jpg" alt="Lentil Soup" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Lentil Soup</h5>
                            <p class="card-text">Hearty and nutritious lentil soup, full of flavor and spices.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 5 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/soup5.jpg" alt="Minestrone Soup" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Minestrone Soup</h5>
                            <p class="card-text">A healthy and hearty vegetable soup loaded with beans and pasta.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 6 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/soup6.jpg" alt="Clam Chowder" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Clam Chowder</h5>
                            <p class="card-text">A creamy and comforting soup packed with tender clams and potatoes.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}