@{
    ViewData["Title"] = "Five Ingredients or Less";
}
@section MainContent {
    <section class="recipe-category">
        <div class="container">
            <h2 class="text-center">Five Ingredients or Less</h2>
            <p class="text-center">Simple yet delicious recipes made with just five ingredients or less!</p>
            <div class="row justify-content-center">
                <!-- Tarjeta 1 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/5ingredients1.jpg" alt="Caprese Salad" class="card-img-top">
                        <!-- Botón de favorito -->
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Caprese Salad</h5>
                            <p class="card-text">Tomatoes, fresh mozzarella, basil, olive oil, and balsamic glaze.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 2 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/5ingredients2.jpg" alt="Avocado Toast" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Avocado Toast</h5>
                            <p class="card-text">Toast, mashed avocado, salt, pepper, and lemon juice.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 3 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/5ingredients3.jpg" alt="Banana Smoothie" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Banana Smoothie</h5>
                            <p class="card-text">Banana, milk, honey, ice, and vanilla extract.</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Segunda fila de 3 tarjetas -->
            <div class="row justify-content-center mt-4">
                <!-- Tarjeta 4 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/5ingredients4.jpg" alt="Grilled Cheese" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Grilled Cheese</h5>
                            <p class="card-text">Bread, cheese, butter, and a touch of salt.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 5 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/5ingredients5.jpg" alt="Tomato Soup" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Tomato Soup</h5>
                            <p class="card-text">Tomatoes, broth, cream, garlic, and salt.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 6 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/5ingredients6.jpg" alt="Scrambled Eggs" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Scrambled Eggs</h5>
                            <p class="card-text">Eggs, butter, salt, pepper, and fresh herbs.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}