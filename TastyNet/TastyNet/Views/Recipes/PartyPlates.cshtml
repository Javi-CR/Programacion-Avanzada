@{
    ViewData["Title"] = "Party Plates";
}
@section MainContent {
    <section class="recipe-category">
        <div class="container">
            <h2 class="text-center">Party Plates</h2>
            <p class="text-center">Delicious treats perfect for entertaining your guests.</p>
            <div class="row justify-content-center">
                <!-- Tarjeta 1 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/party1.jpg" alt="Mini Sliders" class="card-img-top">
                        <!-- Botón de favorito -->
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Mini Sliders</h5>
                            <p class="card-text">Perfectly sized bites that are great for any party.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 2 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/party2.jpg" alt="Spinach Artichoke Dip" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Spinach Artichoke Dip</h5>
                            <p class="card-text">Creamy, cheesy, and always a crowd favorite.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 3 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/party3.jpg" alt="Stuffed Mushrooms" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Stuffed Mushrooms</h5>
                            <p class="card-text">Savory appetizers that are perfect for any occasion.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}