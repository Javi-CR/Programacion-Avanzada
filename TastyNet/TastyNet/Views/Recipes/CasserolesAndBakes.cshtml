@{
    ViewData["Title"] = "Casseroles & Bakes";
}

<section class="recipe-category">
    <div class="container">
        <h2 class="text-center">Casseroles & Bakes</h2>
        <p class="text-center">Delicious and hearty dishes perfect for family meals and gatherings.</p>
        <div class="row justify-content-center">
            <!-- Tarjeta 1 -->
            <div class="col-md-4">
                <div class="card position-relative">
                    <img src="~/img/recipes/casserole1.jpg" alt="Lasagna" class="card-img-top">
                    <!-- Botón de favorito -->
                    <button class="favorite-btn">
                        <i class="bi bi-heart"></i>
                    </button>
                    <div class="card-body">
                        <h5 class="card-title">Classic Lasagna</h5>
                        <p class="card-text">Layers of pasta, meat sauce, and cheese baked to perfection.</p>
                    </div>
                </div>
            </div>

            <!-- Tarjeta 2 -->
            <div class="col-md-4">
                <div class="card position-relative">
                    <img src="~/img/recipes/casserole2.jpg" alt="Chicken Casserole" class="card-img-top">
                    <button class="favorite-btn">
                        <i class="bi bi-heart"></i>
                    </button>
                    <div class="card-body">
                        <h5 class="card-title">Chicken Casserole</h5>
                        <p class="card-text">Tender chicken and vegetables in a creamy sauce topped with breadcrumbs.</p>
                    </div>
                </div>
            </div>

            <!-- Tarjeta 3 -->
            <div class="col-md-4">
                <div class="card position-relative">
                    <img src="~/img/recipes/casserole3.jpg" alt="Shepherd's Pie" class="card-img-top">
                    <button class="favorite-btn">
                        <i class="bi bi-heart"></i>
                    </button>
                    <div class="card-body">
                        <h5 class="card-title">Shepherd's Pie</h5>
                        <p class="card-text">A savory filling topped with creamy mashed potatoes and baked until golden.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
