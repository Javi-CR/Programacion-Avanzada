@{
    ViewData["Title"] = "Cookies & Bars";
}
@section MainContent {
    <section class="recipe-category">
        <div class="container">
            <h2 class="text-center">Cookies & Bars</h2>
            <p class="text-center">Perfectly baked cookies and delightful bars for any time of the day.</p>
            <div class="row justify-content-center">
                <!-- Tarjeta 1 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/cookies1.jpg" alt="Chocolate Chip Cookies" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Chocolate Chip Cookies</h5>
                            <p class="card-text">Crispy edges with gooey chocolate centers.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 2 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/bars1.jpg" alt="Lemon Bars" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Lemon Bars</h5>
                            <p class="card-text">Tangy lemon filling with a buttery shortbread crust.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 3 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/cookies2.jpg" alt="Oatmeal Raisin Cookies" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Oatmeal Raisin Cookies</h5>
                            <p class="card-text">Chewy cookies packed with oats and sweet raisins.</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Segunda fila de 3 tarjetas -->
            <div class="row justify-content-center mt-4">
                <!-- Tarjeta 4 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/bars2.jpg" alt="Brownies" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Fudge Brownies</h5>
                            <p class="card-text">Rich and fudgy brownies with a soft, chewy texture.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 5 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/cookies3.jpg" alt="Peanut Butter Cookies" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Peanut Butter Cookies</h5>
                            <p class="card-text">Soft and crumbly cookies with a rich peanut butter flavor.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 6 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/bars3.jpg" alt="Cheesecake Bars" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Cheesecake Bars</h5>
                            <p class="card-text">Creamy cheesecake on a graham cracker crust.</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Tercera fila de 3 tarjetas -->
            <div class="row justify-content-center mt-4">
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/cookies4.jpg" alt="Snickerdoodle Cookies" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Snickerdoodle Cookies</h5>
                            <p class="card-text">Soft and chewy cookies coated in cinnamon sugar.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/bars4.jpg" alt="Blondies" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Blondies</h5>
                            <p class="card-text">Buttery and chewy bars with a hint of vanilla and brown sugar.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/cookies5.jpg" alt="Sugar Cookies" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Sugar Cookies</h5>
                            <p class="card-text">Classic sugar cookies perfect for decorating or enjoying plain.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}