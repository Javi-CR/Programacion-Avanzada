@{
    ViewData["Title"] = "Gluten-Free Recipes";
}
@section MainContent {
    <section class="recipe-category">
        <div class="container">
            <h2 class="text-center">Gluten-Free Recipes</h2>
            <p class="text-center">Tasty and healthy gluten-free options for everyone.</p>
            <div class="row justify-content-center">
                <!-- Tarjeta 1 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/glutenfree1.jpg" alt="Gluten-Free Pancakes" class="card-img-top">
                        <!-- Botón de favorito -->
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Gluten-Free Pancakes</h5>
                            <p class="card-text">Fluffy and delicious pancakes, perfect for breakfast.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 2 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/glutenfree2.jpg" alt="Quinoa Salad" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Quinoa Salad</h5>
                            <p class="card-text">Light, healthy, and packed with flavor.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 3 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/glutenfree3.jpg" alt="Sweet Potato Fries" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Sweet Potato Fries</h5>
                            <p class="card-text">Crispy and satisfying, perfect for a snack or side dish.</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Segunda fila de 3 tarjetas -->
            <div class="row justify-content-center mt-4">
                <!-- Tarjeta 4 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/glutenfree4.jpg" alt="Zucchini Noodles" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Zucchini Noodles</h5>
                            <p class="card-text">A light and healthy alternative to pasta with fresh zucchini.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 5 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/glutenfree5.jpg" alt="Cauliflower Pizza Crust" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Cauliflower Pizza Crust</h5>
                            <p class="card-text">A gluten-free pizza base made with cauliflower and cheese.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 6 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/glutenfree6.jpg" alt="Grilled Chicken Skewers" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Grilled Chicken Skewers</h5>
                            <p class="card-text">Tender and juicy grilled chicken skewers with a touch of spice.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}