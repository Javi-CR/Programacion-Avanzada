@{
    ViewData["Title"] = "30-Minute Meals";
}
@section MainContent {
    <section class="recipe-category">
        <div class="container">
            <h2 class="text-center">30-Minute Meals</h2>
            <p class="text-center">Quick and delicious meals ready in 30 minutes or less.</p>
            <div class="row justify-content-center">
                <!-- Tarjeta 1 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/30min1.jpg" alt="Stir-Fry Vegetables" class="card-img-top">
                        <!-- Botón de favorito -->
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Stir-Fry Vegetables</h5>
                            <p class="card-text">Fresh vegetables stir-fried with a tangy sauce, ready in minutes.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 2 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/30min2.jpg" alt="Chicken Pasta" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Chicken Pasta</h5>
                            <p class="card-text">Creamy pasta with grilled chicken and fresh herbs, a quick family favorite.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 3 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/30min3.jpg" alt="Shrimp Tacos" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Shrimp Tacos</h5>
                            <p class="card-text">Crispy shrimp tacos with a tangy slaw and spicy sauce, ready in 30 minutes.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}