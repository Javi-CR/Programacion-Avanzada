@{
    ViewData["Title"] = "One-Pot Dishes";
}

<section class="recipe-category">
    <div class="container">
        <h2 class="text-center">One-Pot Dishes</h2>
        <p class="text-center">Delicious meals with minimal cleanup. Perfect for busy days!</p>
        <div class="row justify-content-center">
            <!-- Tarjeta 1 -->
            <div class="col-md-4">
                <div class="card position-relative">
                    <img src="~/img/recipes/onepot1.jpg" alt="One-Pot Chicken Alfredo" class="card-img-top">
                    <!-- Botón de favorito -->
                    <button class="favorite-btn">
                        <i class="bi bi-heart"></i>
                    </button>
                    <div class="card-body">
                        <h5 class="card-title">One-Pot Chicken Alfredo</h5>
                        <p class="card-text">Creamy and flavorful Alfredo with chicken, all made in one pot.</p>
                    </div>
                </div>
            </div>

            <!-- Tarjeta 2 -->
            <div class="col-md-4">
                <div class="card position-relative">
                    <img src="~/img/recipes/onepot2.jpg" alt="One-Pot Beef Stroganoff" class="card-img-top">
                    <button class="favorite-btn">
                        <i class="bi bi-heart"></i>
                    </button>
                    <div class="card-body">
                        <h5 class="card-title">One-Pot Beef Stroganoff</h5>
                        <p class="card-text">A hearty and comforting dish, perfect for a quick dinner.</p>
                    </div>
                </div>
            </div>

            <!-- Tarjeta 3 -->
            <div class="col-md-4">
                <div class="card position-relative">
                    <img src="~/img/recipes/onepot3.jpg" alt="One-Pot Veggie Stir-Fry" class="card-img-top">
                    <button class="favorite-btn">
                        <i class="bi bi-heart"></i>
                    </button>
                    <div class="card-body">
                        <h5 class="card-title">One-Pot Veggie Stir-Fry</h5>
                        <p class="card-text">Packed with fresh veggies and flavor, this stir-fry is a winner!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
