@{
    ViewData["Title"] = "Pies & Desserts";
}
@section MainContent {
    <section class="recipe-category">
        <div class="container">
            <h2 class="text-center">Pies & Desserts</h2>
            <p class="text-center">Delight in our collection of classic pies and delectable desserts.</p>
            <div class="row justify-content-center">
                <!-- Tarjeta 1 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/pies1.jpg" alt="Apple Pie" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Apple Pie</h5>
                            <p class="card-text">Classic apple pie with a flaky, buttery crust.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 2 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/pies2.jpg" alt="Pumpkin Pie" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Pumpkin Pie</h5>
                            <p class="card-text">Creamy and spiced pumpkin filling in a crisp crust.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 3 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/desserts1.jpg" alt="Chocolate Mousse" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Chocolate Mousse</h5>
                            <p class="card-text">Light and creamy mousse with rich chocolate flavor.</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Segunda fila de 3 tarjetas -->
            <div class="row justify-content-center mt-4">
                <!-- Tarjeta 4 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/pies3.jpg" alt="Pecan Pie" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Pecan Pie</h5>
                            <p class="card-text">Sweet and nutty pecan pie with a rich filling.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 5 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/desserts2.jpg" alt="Strawberry Cheesecake" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Strawberry Cheesecake</h5>
                            <p class="card-text">Creamy cheesecake topped with fresh strawberries.</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta 6 -->
                <div class="col-md-4">
                    <div class="card position-relative">
                        <img src="~/img/recipes/desserts3.jpg" alt="Lemon Tart" class="card-img-top">
                        <button class="favorite-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                        <div class="card-body">
                            <h5 class="card-title">Lemon Tart</h5>
                            <p class="card-text">Tangy lemon curd in a crisp pastry shell.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}