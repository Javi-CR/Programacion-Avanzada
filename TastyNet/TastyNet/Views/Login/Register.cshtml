@model Users



<div class="text-center">
    <h1 class="display-4">Sign Up</h1>
</div>

<!-- Register Section -->
<section id="register" class="contact section">

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <!-- Additional Information -->
        <div class="info-wrap" data-aos="fade-up" data-aos-delay="200">
            <div class="row gy-5">
                <div class="col-lg-12 text-center">
                    <h2>Create an account</h2>
                    <p>Please, complete the following information to register.</p>
                </div>
            </div>
        </div>

        <!-- Register Form -->
        <form asp-action="Register" asp-controller="Login" data-aos="fade-up" data-aos-delay="300" class="custom-form">
            <div class="row gy-4 d-flex justify-content-center">

                <div class="col-md-8">
                    <input type="text" asp-for="IdentificationNumber" class="form-control custom-input" placeholder="ID number" required="">
                </div>

                <div class="col-md-8">
                    <input type="text" asp-for="Name" class="form-control custom-input" placeholder="Full Name" required="">
                </div>

                <div class="col-md-8">
                    <input type="email" asp-for="Email" class="form-control custom-input" placeholder="Email Address" required="">
                </div>

                <div class="col-md-8">
                    <input type="password" asp-for="Password" class="form-control custom-input" placeholder="Password" required="">
                </div>

                <div class="col-md-12 text-center">
                    <button type="submit" class="btn btn-success custom-button">Sign Up</button>
                </div>

            </div>

            <div class="row text-center mt-4">
                <div class="col-md-12">
                    <p>Already have an account?</p>
                    <a href="@Url.Action("Login", "Login")" class="custom-link">Login here</a>
                </div>
            </div>

        </form><!-- End Register Form -->

    </div>

</section><!-- /Register Section -->
