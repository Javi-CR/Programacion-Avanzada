@{
    Layout = "~/Views/Shared/_LayoutDash.cshtml";
}

<!-- Page Title -->
<div class="page-title" data-aos="fade">

    <nav class="breadcrumbs">
        <div class="container">
            <ol>
                <li><a href="@Url.Action("Profile","User")" style="color: white;">Profile</a></li>
                <li><a href="@Url.Action("EditProfile","User")" style="color: white;">Edit Profile</a></li>
                <li><a href="@Url.Action("ChangePassword","User")">Change Password</a></li>

            </ol>
        </div>
    </nav>

    <div class="heading">
        <div class="container">
            <div class="row d-flex justify-content-center text-center">
                <div class="col-lg-8">

         
                    <div class="profile img">
                        <img src="https://avatars.githubusercontent.com/u/101346449?v=4" alt="">
                    </div>
        
                    <h1>My account</h1>
                    <p class="mb-0">Username + Email</p>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Page Title -->

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-secondary text-center">@ViewBag.Mensaje</div>
}

<!-- Edit Section -->
<section class="contact section">
    <!-- Form -->
    <form asp-controller="User" asp-action="ChangePassword" class="php-email-form" data-aos-delay="300">

            <div class="row gy-4 d-flex justify-content-center">

            <div class="col-md-8">
                <input type="text" name="password" class="form-control" placeholder="Your new password" required>
            </div>

            <div class="col-md-8">
                <input type="text" name="ConfirmPassword" class="form-control" placeholder="Confirm password" required>
            </div>

            <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>

        </div>
    </form>
</section>

